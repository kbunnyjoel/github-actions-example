<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Calculator</title>
    <link rel="icon" href="/images/image2.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.png" type="image/png">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>ðŸš€ The Super Calculator ðŸš€</h1>
        <form id="add-form">
            <input type="text" name="num1" placeholder="Enter first number" required>
            <span>+</span>
            <input type="text" name="num2" placeholder="Enter second number" required>
            <button type="submit">Calculate!</button>
        </form>

        <% if (typeof result !== 'undefined') { %>
            <h2>Result: <%= result %></h2>
        <% } %>

        <% if (typeof error !== 'undefined') { %>
            <h2 class="error"><%= error %></h2>
        <% } %>
    </div>
    <footer>
        <p><small>Powered by EJS & Express</small></p>
    </footer>
    <script>
        document.getElementById('add-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            const num1Input = document.querySelector('[name="num1"]');
            const num2Input = document.querySelector('[name="num2"]');
            const container = document.querySelector('.container');

            const num1 = num1Input.value;
            const num2 = num2Input.value;

            try {
                const res = await fetch('/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ num1, num2 })
                });

                const data = await res.json();

                // Remove previous result if any
                const existingResult = document.querySelector('.result-output');
                if (existingResult) {
                    existingResult.remove();
                }

                const output = document.createElement('h2');
                output.className = 'result-output';
                if (data.result !== undefined) {
                    output.textContent = `Result: ${data.result}`;
                } else if (data.error) {
                    output.classList.add('error');
                    output.textContent = data.error;
                }

                container.appendChild(output);

                // Clear input fields
                num1Input.value = '';
                num2Input.value = '';

            } catch (err) {
                console.error('Request failed', err);
            }
        });
    </script>
</body>
</html>
