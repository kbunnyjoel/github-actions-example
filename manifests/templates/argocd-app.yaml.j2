# manifests/templates/argocd-app.yaml.j2
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ app_name }}
  namespace: nodejs
spec:
  project: default
  source:
    repoURL: https://github.com/{{ github_repository }}
    targetRevision: HEAD
    path: apps/{{ app_name }}/chart
    helm:
      valueFiles:
        - values.yaml
  destination:
    server: https://kubernetes.default.svc
    namespace: nodejs
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
